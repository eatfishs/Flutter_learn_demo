page {
  font-size: 28rpx;
  background: #fff;
}

.top-row {
  background-color: #f3f3f3;
  height: 20rpx;
}

.steps {
  margin: 40rpx 40rpx 40rpx 20rpx;
}

.steps .number {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius:50%; 
  text-align: center;
  line-height: 40rpx;
  color: #fff;
  background-color: #999;
  margin-right: 10rpx;
  font-family: SimHei;
}

.completed {
  color: #ffaf4c;
}

.completed  .number {
  background-color: #ffaf4c;
}

.incomplete {
  color: #999;
}

.red {
  color: #ff6565;
}

.wechatidtip {
  font-size: 22rpx;
  color: #d02525;
  width: 690rpx;
}

.line {
  background-color: #ddd;
  height: 2rpx;
  width: 94rpx;
  margin: 20rpx;
}

.row-panel {
  padding: 20rpx 30rpx;
}

.row-panel .inputtitle {
  margin: 0 0 20rpx 0;
}

.row-panel .titleextra {
  font-size: 28rpx;
  color: #c1c1c1;
  text-align: right;
}

.row-panel .picker {
  color: #878787;
  display: inline-flex;
  width: 100%;
}

.row-panel:last-child {
  border-bottom: none;
}

.bottom-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: solid 2rpx#EBEBEB;
  background-color: #ffa739;
  z-index: 10;
}

.bottom-panel .btn-save {
  color: white;
  border-radius: 0;
  line-height: 80rpx;
  font-size: 34rpx;
  background: linear-gradient(to bottom right, #ffc63f, #ffa739);
}

.bottom-panel .button-hover {
  background: linear-gradient(to top right, #ffc63f, #ffa739);
}

.row-panel .text {
  height: 80rpx;
  background-color: #f3f3f3;
  padding: .375rem .75rem;
  box-sizing: border-box;
}


.qrcode {
  width: 218rpx;
  height: 218rpx;
}

.qrcodeplaceholder {
  width: 218rpx;
  height: 218rpx;
  background: #f3f3f3;
}

.qrcodeplaceholder .image {
  width: 86rpx;
  height: 86rpx;
}

.icon-plus {
  font-size: 100rpx;
  color: #d1d1d1;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  font-weight: lighter;
}

.bottom-space {
  height: 180rpx;
}

.upload-button {
  background: #ffaf4c;
  border-radius: 6rpx;
  height: 66rpx;
  width: 208rpx;
  color: #fff;
  margin-left: 26rpx;
}
