.myStore {
    border-top-color: #f1f1f1;
    border-top-style: solid;
    border-width: 14px;
}

.myVisitStores {
    border-top-color: #f1f1f1;
    border-top-style: solid;
    border-width: 14rpx;
    margin-top: 25px;
}

.title {
    font-size: 18px;
    color: #999999;
    line-height: 40rpx;
    margin-left: 4.8vw;
    margin-top: 2.2vw;
}

.storeIcon {
    width: 60px;
    height: 60px;
    margin-left: 4.8vw;
    margin-top: 3.4vw;
    border-radius: 50%;
    border: 2px solid#FFAD4C;
}

.storeName {
    font-size: 14rpx;
    color: #333333;
    letter-spacing: 0;
    text-align: center;
    line-height: 20px;
}

.bottomButton {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 50px;
    border-radius: 0!important;
    background: linear-gradient(to bottom, #FFC63F, #FFA739);
    color: #ffffff;
    letter-spacing: 2px;
    border: 0!important;
}

.button-hover {
    background: linear-gradient(to bottom, #FFA739, #FFC63F);
}

.backtohome {
    color: #ffffff;
    background: #FFAF4C;
    border-radius: 3px;
    border: 0;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg {
    width: 290px;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -185px 40px;
    padding-top: 25px;
    background-color: #fff;
    border-radius: 18px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.shareButton {
    line-height: 50px;
    width: 100%;
    justify-content: center;
    letter-spacing: 5px;
    margin-top: 25px;
    border-radius: 0;
    background: linear-gradient(to bottom right, #FFC63F, #FFA739);
    color: #ffffff;
    font-size: 18px;
}
 
.payment {
    position: fixed;
    bottom: 0;
    display: inline-flex;
    line-height: 5px;
    width: 100%;
    justify-content: center;
    letter-spacing: 5px;
    border-radius: 0;
    background: linear-gradient(to bottom right, #FFC63F, #FFA739);
    color: #ffffff;
    font-size: 18px;
}
