.teach-page {
  box-sizing: border-box;
  padding: 0 16px;
  color: #333333;
  padding-bottom: 30px;
}
.tilte {
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
  margin-bottom: 15px;
}
.sub-title {
  font-size: 16px;
  margin: 15px 0;
  color: #cb1717;
  font-weight: bold;
}
.sub-title-2 {
  text-align: center;
}
.sub-title-2 view {
  display: inline-block;
  margin: 10px auto;
  box-sizing: border-box;
  background-color: #ffaf4c;
  padding: 10px 30px;
  color: #fff;
  border-radius: 25px;
}

.video-wrap {
  padding: 75% 0 0;
  position: relative;
  margin-bottom: 6px;
}
.video-wrap::before {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  content: "";
  background-image: var(--play-icon);
  background-size: 15%;
  background-position: center;
  background-repeat: no-repeat;
}
.video-wrap image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #000;
}

.page-footer-fixed {
  background-color: #fff;
}

.btn {
  height: 40px !important;
  font-size: 16px !important;
}
