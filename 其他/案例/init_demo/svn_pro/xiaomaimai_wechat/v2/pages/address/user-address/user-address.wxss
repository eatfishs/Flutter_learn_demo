/*地址管理*/
.flex-row-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.flex-row-top-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}

.flex-row-bottom-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}

.flex-row-center-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.flex-row-center-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}

.flex-column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

page {
  background-color: #f7f7f7;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
}

.address {
  background-color: #fff;
  margin-top: 1px;
  margin-bottom: 10px;
}

.address-icon {
  width: 50px;
}

.address-detail {
  border: solid 1px;
}

.address-name-phone {
  margin-bottom: 10px;
  font-size: 12px;
  font-weight: 900;
}

.address-name {
  margin-right: 10px;
}

.address-info {
  margin-bottom: 15px;
}

.address-edit {
  border-top: solid 1rpx#EBEBEB;
  text-align: right;
  padding: 10px 10px;
}

.btn-small {
  display: inline-block;
  font-size: 12px;
  color: #616161;
  margin-right: 5px;
}

.btn-small:last-child {
  margin-right: 0;
}

.default-address {
  float: left;
}

.default-address .icon-circle {
  margin-right: 5px;
}

.default-address .icon-correct {
  margin-right: 5px;
  color: #FFA739;
}

.btn-edit {
  margin-right: 15px;
}

.btn-edit .icon-pencil {
  color: #999999;
  margin-right: 5px;
}

.btn-remove .icon-rabbish {
  color: #999999;
  margin-right: 5px;
}

.loading-panel {
  margin-top: 40px;
  margin-bottom: 30px;
  height: 100px;
}
 
.main-scroll {
  padding-bottom: 53px;
}
.address-wrap{
  box-sizing: border-box;
}
