.flex-row-center {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.flex-row-top-left {
    display: flex;
    flex-direction: row;
    align-items: left;
    justify-content: flex-start;
}

.flex-row-bottom-left {
    display: flex;
    flex-direction: row;
    align-items: left;
    justify-content: flex-start;
}

.flex-row-center-left {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.flex-row-center-right {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

.flex-column-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

page {
    height: 100%;
    display: flex;
}

.page {
    font-family: '微软雅黑';
    flex: 1;
    display: flex;
    flex-direction: column;
}

.page-container {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.canvas-shared {
    width: 1380rpx;
    height: 2112rpx;
    border: solid 2rpx red;
}

.share-card {
    justify-self: flex-start;
    justify-content: flex-start;
    background-color: transparent;
    width: auto;
    height: 100vw;
    margin: 30rpx;
    border-radius: 10rpx;
    display: block;
}

.bottom-group-bar {
    height: 110rpx;
    padding: 0 30rpx;
    background-color: white;
    box-shadow: 0-2px 12rpx 0 rgba(0, 0, 0, 0.1);
}

.bottom-group-bar .btn {
    flex: 1;
    height: 80rpx;
    font-size: 32rpx;
    line-height: 80rpx;
    border-radius: 12rpx;
}

.bottom-group-bar .btn-save {
    border: solid 1rpx#FFAF4C;
    color: #FFAF4C;
    background-color: white;
    margin-right: 15rpx;
}

.bottom-group-bar .btn-share {
    background-image: linear-gradient(90deg, #FFAF4C 0%, #FFAF4C 100%);
    color: white;
    margin-left: 15rpx;
}

.bottom-group-bar .btn-share-only {
    background-image: linear-gradient(90deg, #FFAF4C 0%, #FFAF4C 100%);
    color: white;
}

.copy-button {
    color: #FFAF4C;
    font-size: 26rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.copy-button .image{
    width: 30rpx;
    height: 30rpx;
}

.ref-code {
    color: #FFAD4E;
    font-size: 38rpx;
    margin-left: 40rpx;
    margin-right: 170rpx;
}

.ref {
    margin: 30rpx;
    border: #D45628 solid 2rpx;
    border-radius: 10rpx;
}

.ref-header {
    background-color: #D45628;
    font-size: 32rpx;
    color: #FFF;
    padding: 22rpx 30rpx;
}

.ref-body {
    background-color: #FFF7F7;
}

.wx-text {
    color: #3AB729;
    font-size: 34rpx;
}

.ref-info {
    padding: 40rpx 36rpx 0 36rpx;
}

.ref-image {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.wx-tip {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-bottom: 56rpx;
}

.wx-tip .image {
    width: 40rpx;
    height: 40rpx;
}

.gzh {
    width: 310rpx;
    height: 310rpx;
    padding: 45rpx;
}

.faq {
    margin: 30rpx
}

.faq .q, .faq .a {
    margin-top: 30rpx;
}

.faq .q .q{
    font-size: 36rpx;
    color: #FFAD4E;
    font-weight: bold;
    margin-right: 27rpx;
}

.faq .q .title{
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
}

.faq .a .a{
    font-size: 36rpx;
    color: #FFAD4E;
    font-weight: bold;
    margin-right: 27rpx;
}

.faq .a .body{
    font-size: 28rpx;
    color: #666;
}
