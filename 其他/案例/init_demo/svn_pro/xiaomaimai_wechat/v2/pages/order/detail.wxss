page {
  background: #f1f1f1;
}

.order-memo {
  width: auto;
  height: 40px;
  color: #616161;
  padding: 10px;
  text-align: left;
  border: 1rpx solid #e3e3e3;
}

.product-list {
  padding: 10px 0 !important;
}

.product-list .price {
  color: #646566 !important;
}

.product-list .content {
  justify-content: start;
}

.text-total-price {
  color: #ee5050;
  font-size: 18px;
}

.text-currency {
  font-size: 14px;
}

.address-bar {
  position: relative;
  box-sizing: border-box;
  padding: 15px;
  overflow: hidden;
  background-color: #fff;
}

.address-bar::before,
.address-bar::after {
  position: absolute;
  content: "";
  width: 100%;
  height: 4px;
  background: transparent
    url("data:image/png;base64,")
    repeat-x;
  background-size: cover;
  left: 0;
  right: 0;
}

.address-bar::before {
  top: 0;
}
.address-bar::after {
  bottom: 0;
}

.avatar-text {
  font-size: 14px !important;
}
.footer-buttom-group{
  background-color: #fff;
  padding: 5px 16px;
  height: 100%;
}
.btn {
  height: 40px !important;
  font-size: 16px !important;
}
