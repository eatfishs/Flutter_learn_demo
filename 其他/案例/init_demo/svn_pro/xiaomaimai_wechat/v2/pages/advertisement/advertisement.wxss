.moments {
    padding: 30rpx;
    margin-bottom: 100rpx;
}

.moments textarea.moment {
    display: flex;
    width: 90vw;
    max-height: 220rpx;
    border: 2rpx solid#e3e3e3;
    padding: 10rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.moments .image-list image {
    display: inline-flex;
    max-width: 200rpx;
    max-height: 200rpx;
    background: #F8F8F8;
    margin-top: 10rpx;
}

.moments .image-list .message {
    color: #c9c9c9;
    margin-top: 10rpx;
    font-size: 24rpx;
}

.moments .image-list .pricerange {
    display: flex;
    padding: 20rpx 0;
    color: #999999;
}

.moments .image-list .pricerange text {
    display: inline-flex;
    margin-left: 10rpx;
    justify-content: left;
    align-items: left;
}

.moments .image-list .price {
    display: flex;
    padding: 20rpx 0;
    color: #999999;
}

.moments .image-list .price text {
    width: 100rpx;
    display: inline-flex;
    justify-content: center;
    align-items: center;
}

.moments .image-list .price input {
    margin-left: 20rpx;
    font-size: 40rpx;
    font-weight: 500;
    color: #EE5050;
    display: inline-flex;
    align-items: center;
    border-bottom: 2rpx solid#c9c9c9;
}

.moments .image-list .price input:before {
    content: "Â¥";
    color: #c9c9c9;
    font-weight: normal;
    letter-spacing: 6rpx;
    font-size: 34rpx;
}

.moments .image-list .checkbox-confirm {
    margin-left: 10rpx;
    color: #999999!important;
}

.moments .image-list textarea.desc {
    display: flex;
    width: 90vw;
    max-height: 160rpx;
    border: 2rpx solid#e3e3e3;
    padding: 10rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.moments .image-list .tag-item {
    color: #2377C3;
    padding: 16rpx 30rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
    float: left;
    background: #E7F1F9!important;
}

.moments .image-list .edit-tag-item {
    color: #EF751D;
    padding: 16rpx 30rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    margin-bottom: 10rpx;
    background: #FFF0DD!important;
}

.moments .image-list .edit-tag-item .tag-plus {
    font-size: 20rpx!important;
    padding-right: 10rpx;
    color: #EF751D;
}

.moments .choose-popup {
    font-size: 30rpx;
    text-align: center;
}

.moments .choose-popup .choose-from-camera {
    padding: 20rpx 0;
    border-bottom: 2rpx solid#ededed;
}

.moments .choose-popup .choose-from-photo {
    padding: 20rpx 0;
    border-bottom: 2rpx solid#ededed;
}

.moments .choose-popup .cancel {
    padding: 20rpx 0;
}

.moments .choose-popup .message {
    color: #b9b9b9;
    font-size: 24rpx;
}

.moments .icon-plus {
    font-size: 100rpx;
    color: #D1D1D1;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 200rpx;
    height: 200rpx;
    font-weight: lighter;
}

.btn-push {
    position: fixed;
    bottom: 0;
    width: 100vw;
    height: 100rpx;
    border-radius: 0!important;
    background: linear-gradient(to bottom, #FFC63F, #FFA739);
    color: #ffffff;
    letter-spacing: 4rpx;
    border: 0!important;
}

.button-hover {
    background: linear-gradient(to bottom, #FFA739, #FFC63F);
}

.pricerange {
    display: flex;
    padding: 20rpx 0;
    color: #999999;
}

.pricerange text {
    display: inline-flex;
    margin-left: 10rpx;
    justify-content: left;
    align-items: left;
}
