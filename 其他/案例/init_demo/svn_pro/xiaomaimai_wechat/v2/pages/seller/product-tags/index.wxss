
.tags-content .tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  min-height: 60px;
  max-height: 110px;
  border: 1px solid#e3e3e3;
  padding: 5px 5px 0 10px;
  margin-bottom: 10px;
  font-size: 18px;
}

.tags-content .tags .add-tag-item {
  padding: 3px 0rpx;
  font-size: 14px;
}

.tags-content .tags .tag-item {
  color: #2377c3;
  padding: 8px 16px;
  margin-right: 5px;
  margin-bottom: 5px;
}

.tags-content .history-tags {
  padding: 10px 0;
  font-size: 12px;
  width: 95vw;
}

.tags-content .history-tags .title {
  color: #999;
  margin-bottom: 10px;
}

.tags-content .history-tags .tag-edit {
  display: flex;
  float: right;
}

.tags-content .history-tags .tag-edit .icon-edit {
  font-size: 12px;
  margin-right: 3px;
}

.tags-content .history-tags .tag-item {
  color: #2377c3;
  padding: 8px 16px;
  margin-right: 5rpx;
  margin-bottom: 5rpx;
  background: #f1f1f1 !important;
}

.tags-content .history-tags .tag-item.active {
  background: #fff0dd !important;
  color: #f07c28;
}

.tags-content .message {
  color: #999;
  margin-top: 5px;
  font-size: 12px;
}

.hide {
  display: none !important;
}

.btn-submit {
  width: 100%;
  height: 50px;
  border-radius: 0 !important;
  background: linear-gradient(to bottom, #ffc63f, #ffa739);
  color: #fff;
  letter-spacing: 2px;
  border: 0 !important;
}

.button-hover {
  background: linear-gradient(to bottom, #ffa739, #ffc63f);
}
