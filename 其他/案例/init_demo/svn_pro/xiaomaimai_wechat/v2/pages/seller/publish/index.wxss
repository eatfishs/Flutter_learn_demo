.page {
  margin: 0 16px;
}
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 16px 0;
}
.title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 16px;
}
.input {
  margin: 16px 0;
  border: 1px solid #ddd;
}
.help-icon {
  width: 30px !important;
  transform: translate(0, 4px);
}
.exp {
  font-size: 12px;
  display: inline-flex;
}
.link {
  color: #2377c3;
}
.popover-content {
  font-size: 12px;
  width: 195px;
}
.body {
  margin: 16px 0;
}
.video-wrap{
  padding: 75% 0 0;
  position: relative;
  margin-bottom: 6px;
}
.video-wrap video{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.input {
  width: auto;
  max-height: 110px;
  border: 1px solid#e3e3e3;
  padding: 5px;
  margin-bottom: 15px;
  font-size: 16px;
}
.navbar {
  position: fixed;
  box-sizing: border-box;
  width: 100%;
  top: 0;
}
.navbar-title {
  padding-right: 85px;
}
