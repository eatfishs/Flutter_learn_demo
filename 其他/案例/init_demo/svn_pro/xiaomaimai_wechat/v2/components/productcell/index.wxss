.list-box .box-item {
    font-size: 26rpx;
    padding: 30rpx 30rpx 30rpx 30rpx;
    border-bottom: solid 1rpx#EBEBEB;
}

.list-box .box-item .time {
    color: #999999;
    font-size: 22rpx;
}

.list-box .box-item .box-content {
    /*display: -webkit-box;
        overflow: hidden;
        text-overflow: ellipsis;
        word-break: break-all;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;*/
    margin-bottom: 10rpx;
}

.list-box .box-item .box-content .topic-title {
    padding-right: 10rpx;
    color: #FFAF4C;
}

.list-box .box-item .box-content .topic-content {
    color: #666666;
}

.list-box .box-item .favorite {
    display: inline-flex;
    margin-right: 20rpx;
    margin-top: 20rpx;
    color: #FFAD4C;
}

.list-box .box-item .favorite text {
    padding: 0 6rpx;
    vertical-align: middle;
    color: #999999;
}

.list-box .box-item .share {
    display: inline-flex;
    margin-top: 20rpx;
}

.list-box .box-item .share .icon-share {
    font-weight: lighter;
}

.list-box .box-item .share text {
    padding: 0 6rpx;
    vertical-align: middle;
    color: #999999;
}

.list-box .box-item .more {
    display: inline-flex;
    margin-left: 20rpx;
}

.list-box .box-item .more .icon-more {
    font-weight: lighter;
    color: #999999;
}

.list-box .box-item .more text {
    padding: 0 6rpx;
    vertical-align: middle;
    color: #999999;
}

.list-box .box-item .share .icon-advertisement {
    padding: 0 6rpx;
    width: 30rpx;
    height: 30rpx;
}
