.flex-row-center {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.flex-row-top-left {
    display: flex;
    flex-direction: row;
    align-items: left;
    justify-content: flex-start;
}

.flex-row-bottom-left {
    display: flex;
    flex-direction: row;
    align-items: left;
    justify-content: flex-start;
}

.flex-row-center-left {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}

.flex-row-center-right {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

.flex-column-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.chain-link-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-items: center;
    align-content: center;
    height: 20rpx;
}

.chain-link-row .left {
    display: flex;
    flex: 1;
    text-align: center;
    justify-content: center;
}

.chain-link-row .right {
    display: flex;
    flex: 1;
    justify-content: center;
    color: #616161;
    flex-direction: row;
    align-items: center;
}

.chain-link-row .chain-link {
    background: #D0D0D0;
    box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.5);
    border-radius: 200rpx;
    width: 10rpx;
    height: 38rpx;
}
