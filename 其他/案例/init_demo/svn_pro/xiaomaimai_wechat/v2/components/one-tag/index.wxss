.tag {
  position: relative;
  display: inline-flex;
  align-items: baseline;
  line-height: normal;
  padding: 5px 16px;
  color: #fff;
  background: #969799;
  border-radius: 0px 15px 15px 15px;
  box-sizing: border-box;
  margin-right: 5px;
  margin-bottom: 5px;
}
.tag::before {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  border: inherit;
  border-radius: inherit;
  transform: translate(-50%, -50%);
  opacity: 0;
  content: "";
  background-color: #000;
}
.tag-hover::before {
  opacity: 0.15;
}
.tag-info {
  color: #2377c3;
  background: #e7f1f9;
}
.tag-primary {
  color: #ef751d;
  background: #fff0dd;
}
.icon {
  transform: translate(0px, 1px);
  margin-right: 5px;
}
