/*外部容器*/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  height: 100%;
}

/*复选框样式*/
.carts-list icon {
  margin-top: 30px;
  margin-right: 10px;
}

/*整体列表*/
.carts-list {
  display: flex;
  flex-direction: column;
  background: #fff;
}

/*每行单元格*/
.carts-item {
  margin: 10px 16px 10px 16px;
  display: flex;
  flex-direction: row;
  /*width属性解决标题文字太短而缩略图偏移*/
  /*width:100%;*/
}

/*左部图片*/
.carts-image {
  width: 85px;
  height: 85px;
  border: 1rpx solid#f3f3f3;
  margin: 0rpx 10px 0 0rpx;
}

.kong {
  width: 100px;
  height: 100px;
}

/*右部描述*/
.carts-text {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/*右上部分标题*/
.carts-title {
  font-size: 16px;
  height: 50px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.stepper-button-zero {
  border-radius: 50% !important;
  font-size: 18px !important;
  background-color: #FFF !important;
  border: 1px solid#CCC !important;
  color: #CCC !important;
  width: 20px !important;
  height: 20px !important;
}

.stepper-button-number {
  border-radius: 50% !important;
  font-size: 16px !important;
  background-color: #FFAF4C !important;
  border: 1px solid#FFAF4C !important;
  color: #FFF !important;
  width: 20px !important;
  height: 20px !important;
}

.input-class {
  background-color: #FFF !important;
  font-size: 16px;
}

/*右下部分价格与数量*/
.carts-subtitle {
  font-size: 12px;
  color: darkgray;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-top: 20px;
}

/*价格*/
.carts-price {
  color: #EE5050;
  font-size: 16px;
  line-height: 30px;
  font-weight: 500;
}

/*底部按钮*/
.carts-footer {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #ffffff;
  position: fixed;
}

/*复选框*/
.carts-footer icon {
  margin-left: 10px;
  margin-top: 5rpx;
  color: #fff;
}


.modal-close {
  margin-left: 100px;
  padding: 20px 0;
  color: #939393;
}

.page {
  padding-bottom: 80px;
}

.reds {
  color: red;
}

.pp {
  text-align: center;
  margin-top: 140px;
}

.cla {
  font-family: '微软雅黑';
  color: #ccc;
}

/*继续加购 | 结算*/
.cart-bottom-group-footer .button {
  width: 100%;
  height: 50px;
  background-color: #537DDA;
  font-size: 12rpx;
}

.cart-sum-area {
  height: 30px;
  border-top: solid 1px#EBEBEB;
  display: flex;
  align-items: center;
  padding-left: 15px;
  padding-right: 15px;
}

.cart-sum-area .title {
  font-size: 12px;
}

.checkbox-all-select {
  margin-left: 15px;
}

.btn-continue {
  flex: 1;
  font-size: 12px;
  background-color: white;
  border: none;
  border-radius: 0;
  height: 50px;
  line-height: 50px;
  border-top: solid 1px#EBEBEB;
  color: #616161;
}

.btn-continue::after {
  border: none;
}

.btn-pay {
  flex: 1;
  font-size: 12px;
  background-color: #3688FF;
  border: none;
  border-radius: 0;
  border-top: solid 1px#3688FF;
  color: white;
  height: 50px;
  line-height: 50px;
}

.btn-pay::after {
  border: none;
}

.shopping-cart {
  width: 100%;
  height: 60px;
  background: #ffffff;
  box-shadow: 0 0 20px rgba(153, 153, 153, 0.5);
  z-index: 10;
}

.shopping-cart .icon-cart {
  /*-webkit-filter: drop-shadow(0 0 40rpx rgba(153,153,153,0.5));*/
  position: fixed;
  width: 80px;
  height: 90px;
}

.shopping-cart .total {
  margin-left: 80px;
  height: 60px;
}

.shopping-cart .total .account {
  color: #EE5050;
  font-size: 18px;
  padding: 5px 0;
}

.shopping-cart .total .message {
  color: #999999;
  font-size: 12px;
  padding-bottom: 5px;
}

.shopping-cart .checkout {
  display: inline-flex;
  line-height: 60px;
  float: right;
  width: 150px;
  justify-content: center;
  letter-spacing: 5px;
  border-radius: 0;
  background: linear-gradient(to bottom right, #FFC63F, #FFA739);
  color: #ffffff;
  font-size: 16px;
}

.select-checkbox {
  width: 20px;
  height: 20px;
}

.cart-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #999999 !important;
  font-size: 12rpx;
  width: 100vw;
}

.cart-title .clear {
  float: right;
  display: inline-flex;
  vertical-align: center;
}

.cart-title .clear .icon-rabbish {
  margin-right: 10rpx;
}




