.comment-bar {
  background-color: #f7f7f7 !important;
}
.comment-bar-title,
.comment-bar-value {
  color: #999;
}
.comment-bar-switch {
  line-height: 1em;
  margin-left: 0.6em;
}

.context {
}
.time {
  margin-top: 10px;
  color: #999999;
  font-size: 12px;
}
.disable {
