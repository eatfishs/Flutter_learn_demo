}
.avatar {
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #e7e7e7;
}
.thumbernail {
  position: relative;
  box-sizing: border-box;
  width: 70px;
  height: 70px;
  margin-left: 1em;
}
.thumbernail image {
  width: 100%;
  height: 100%;
}
