@import "../../base.wxss";

/**app.wxss**/
.search-box {
  position: relative;
  color: #999;
  font-size: 14px;
  z-index: 200;
}

.search-header {
  position: relative;
  z-index: 200;
}

.search-box .search-button {
  position: relative;
}

.search-box .search-button.active {
  color: #ffaf4c;
}
.search-button .icon-info {
  top: 5px;
}
.search-content {
  font-size: 14px;

  position: absolute;
}
.search-content .content {
  background: #ffffff;
}
.search-content .search-inline {
  display: inline-flex;
  width: 100%;
  padding: 0 16px 10px 16px;
}

.search-content .search-inline .search-input {
  max-width: 80%;
}

.search-content .topic {
  color: #999999;
  margin-bottom: 5px;
  padding: 0 16px;
}

.search-content .topic .more {
  float: right;
}

.search-content .tag-item {
  display: inline-flex;
  padding: 8px 10px;
  background: #ededed;
  border-radius: 4px;
  margin: 5px 3px;
  color: #666666;
  font-size: 12px;
}

.search-content .tag-item.active {
  background: #fff0dd;
  color: #ef751d;
}

.search-content .history-topics {
  padding: 0 16px;
}

.search-content .history-topics .tag-item.active {
  background: #fff0dd;
  color: #ef751d;
}

.search-content .tags {
  padding: 0 16px;
  color: #999999;
  margin: 6rpx 0;
}

.search-content .tags .more {
  float: right;
}

.search-content .history-tags {
  padding: 0 16px;
}

.search-content .history-tags .tag-item.active {
  background: #fff0dd;
  color: #ef751d;
}

.search-content .others {
  padding: 0 16px;
  color: #999999;
  margin: 10rpx 0;
}

.search-content .others .more {
  float: right;
}

.search-content .history-others {
  padding: 0 16px;
}

.search-content .history-others .tag-item {
  color: #666666;
  padding: 8px 16px;
  margin: 5px 3px;
  font-size: 12px;
  background: #ededed !important;
}

.search-content .actions {
  width: 100%;
}

.search-content .actions .btn-cancel {
  width: 100%;
  border-top: 1px solid#e5e5e5;
  border-radius: 0;
  border-right: 0;
  font-size: 16px;
  color: #999999;
  background: #fdfdfd;
}

.search-content .actions .btn-submit {
  width: 100%;
  border: 0;
  border-radius: 0;
  background: linear-gradient(to bottom right, #ffc63f, #ffa739);
  color: #ffffff;
  font-size: 16px;
}

.backdrop {
  position: fixed;
  background-color: #000;
  opacity: 0.4;
  z-index: 99;
  width: 100%;
  height: 100%;
  top: 220px;
  display: none;
}

.in {
  display: block;
}

.search-leader {
  display: inline-block;
  vertical-align: top;
  padding: 0 7px;
  line-height: 36px;
  border-bottom-left-radius: 4px;
  border-top-left-radius: 4px;
  background: #f3f3f3;
  width: 16px;
  height: 36px;
}

.search-leader-icon {
  width: 12px;
  height: 12px;
  align-items: center;
}

.btn-main {
  margin: 10px;
  background: #ffaf4c;
  font-size: 14px;
  border-radius: 6px;
  text-align: center;
  color: #fff;
  height: 35px;
}
