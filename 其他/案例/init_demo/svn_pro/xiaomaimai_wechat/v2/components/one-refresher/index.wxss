.one-refresher {
  position: absolute;
  top: -60px;
  right: 0;
  left: 0;
  overflow: hidden;
  margin: auto;
  height: 50px
}
.one-refresher--hidden {
  visibility: hidden
}
.one-refresher--visible {
  visibility: visible
}
.one-refresher__content {
  position: absolute;
  bottom: 5px;
  left: 0;
  width: 100%;
  color: rgba(0,0,0,.65);
  text-align: center;
  font-size: 30px
}
.one-refresher__content--text {
  bottom: 0
}
.one-refresher__text-pulling {
  font-size: 16px;
  line-height: 16px
}
.one-refresher__text-refreshing {
  font-size: 16px;
  line-height: 16px;
  display: none
}
.one-refresher__icon-pulling {
  width: 100%;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  transform-style: preserve-3d;
  padding: 7px 0;
  animation-name: refresh-spin-back;
  animation-duration: .2s;
  animation-timing-function: linear;
  animation-fill-mode: none;
  transform: translateZ(0) rotate(0)
}
.one-refresher__icon-refreshing {
  width: 100%;
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  transform-style: preserve-3d;
  padding: 7px 0;
  display: none;
  animation-duration: 1.5s
}
.one-refresher__icon--arrow-down {
  display: block;
  margin: 0 auto;
  width: 20px;
  height: 20px;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 20px 20px;
  background-image: url(data:image/png;base64,)
}
