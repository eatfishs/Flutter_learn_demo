  animation: refresh-spin-rotate 1s steps(12,end) infinite
}
.one-refresher--active.one-refresher--refreshing {
  transition: transform .2s;
  transform: scale(1)
}
.one-refresher--active.one-refresher--refreshing .one-refresher__icon-pulling,
.one-refresher--active.one-refresher--refreshing .one-refresher__text-pulling {
  display: none
}
.one-refresher--active.one-refresher--refreshing .one-refresher__icon-refreshing,
.one-refresher--active.one-refresher--refreshing .one-refresher__text-refreshing {
  display: block
}
.one-refresher--active.one-refresher--refreshing .one-refresher--refreshing-tail {
  transform: scale(0)
}
.one-refresher--active .one-refresher__icon-pulling:not(.one-refresher__icon-pulling--disabled) {
  animation-name: refresh-spin;
  transform: translateZ(0) rotate(-180deg)
}
.one-loader {
  overflow: hidden;
  margin: auto;
  height: 50px;
  font-size: 14px;
  position: relative;
  text-align: center;
  display: none
}
.one-loader .one-refresher__icon--refresher {
  display: inline-block;
  margin: 0
}
.one-loader__text-loading {
  margin-left: 5px
}
.one-loader--hidden {
  visibility: hidden;
  display: none
}
.one-loader--visible {
  visibility: visible;
  display: block
}
.one-loader--end {
  visibility: visible;
  display: block
}
.one-loader__content {
  position: absolute;
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
  color: rgba(0,0,0,.65);
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center;
  -ms-flex-pack: center;
  justify-content: center
}
@keyframes refresh-spin {
  0% {
    transform: translateZ(0) rotate(0)
  }
  to {
    transform: translateZ(0) rotate(180deg)
  }
}
@keyframes refresh-spin-back {
  0% {
    transform: translateZ(0) rotate(180deg)
  }
  to {
    transform: translateZ(0) rotate(0)
  }
}
@keyframes refresh-spin-rotate {
  100% {
    transform: rotate(360deg)
  }
}
