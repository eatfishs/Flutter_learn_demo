/* common variable */
.drawer-left {
  position: fixed;
  top: 0;
  left: 0;
  min-width: 400rpx;
  height: 100vh;
  background: #ffffff;
  z-index: 1200;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.2), 0 4rpx 4rpx 0 rgba(0, 0, 0, 0.14), 0 6rpx 2rpx -4rpx rgba(0, 0, 0, 0.12);
  opacity: 0;
  transition: all 200ms linear;
  transform: translate3d(-100%, 0, 0);
}
.drawer-backdrop {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1150;
  background: rgba(0, 0, 0, 0.5);
  display: none;
}
.in {
  display: block;
  transform: translate3d(0, 0, 0);
  opacity: 1;
}
