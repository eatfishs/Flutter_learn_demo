page {
  background: #fdfdfd;
}
.container {
  width: 100%;
  height: 92vh;
}
.list .item .icon-user,
.list .item .icon-shopping-cart,
.list .item .icon-profile,
.list .item .icon-setting {
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 20rpx;
  color: #666666;
}
.header-bar {
  background: #f8f8f8;
  color: #333333;
}
.header-bar .avatar {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
}
.header-bar .user-info {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  height: 120rpx;
  justify-content: center;
}
.header-bar .user-info .follow {
  font-size: 24rpx;
  color: #808080;
}
.header-bar .user-info .favorite {
  font-size: 24rpx;
  margin: 10rpx;
  color: #808080;
}
.header-bar .scan {
  font-size: 24rpx;
  height: 120rpx;
  display: inline-flex;
  align-items: center;
}
.buttons {
  margin: 20rpx;
}
