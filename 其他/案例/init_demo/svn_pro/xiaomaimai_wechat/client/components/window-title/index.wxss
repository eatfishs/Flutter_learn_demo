.flex-row-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.flex-row-top-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}
.flex-row-bottom-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}
.flex-row-center-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.flex-row-center-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.flex-column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.window-title {
  padding: 30rpx 0;
  background-color: white;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  border-bottom: solid 1rpx #EBEBEB;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  color: #333;
}
.window-title .left {
  display: flex;
  align-content: center;
  justify-items: center;
  flex-direction: row;
  flex: 1;
}
.window-title .left .icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.window-title .right {
  display: flex;
  align-content: center;
  justify-items: center;
  flex-direction: row;
  color: #3688FF;
}
