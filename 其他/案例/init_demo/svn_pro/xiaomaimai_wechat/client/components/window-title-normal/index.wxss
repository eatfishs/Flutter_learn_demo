.flex-row-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.flex-row-top-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}
.flex-row-bottom-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}
.flex-row-center-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.flex-row-center-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.flex-column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.window-title {
  height: 84rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: center;
  align-content: center;
  border-bottom: solid 1rpx #EBEBEB;
  padding: 0 30rpx;
}
.window-title .left {
  display: flex;
  align-content: center;
  justify-items: center;
  flex-direction: row;
  flex: 1;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.window-title .right {
  display: flex;
  align-content: center;
  justify-items: center;
  flex-direction: row;
  color: #333;
  font-size: 30rpx;
}
