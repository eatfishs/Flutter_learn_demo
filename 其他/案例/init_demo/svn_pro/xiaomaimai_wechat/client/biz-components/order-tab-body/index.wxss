.store-list {
  display: none;
  position: fixed;
  width: 100vw;
  min-height: 200px;
  max-height: 365px;
  overflow-y: auto;
  bottom: 0px;
  background: #ffffff;
  z-index: 5;
  box-shadow: 0 0 20px rgba(153, 153, 153, 0.5);
}
.store-list.in {
  display: block;
}
.myStore{
  border-top-color: #f1f1f1;
  border-top-style: solid;
  border-width: 26rpx;
}
.title{
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  margin-left: 4.8vw;
  margin-top: 2.2vw;
}
.storeIcon{
  width:120rpx;
  height:120rpx;
  margin-left: 4.8vw;
  margin-top: 3.4vw;
  border-radius: 50%;
  border: 3rpx solid #FFAD4C;
}
.storeName{
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg{
    width: 580rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.shareButton {
  line-height: 50px;
  width: 100%;
  justify-content: center;
  letter-spacing: 5px;
  border-radius: 0;
  background: linear-gradient(to bottom right, #FFC63F, #FFA739);
  color: #ffffff;
  font-size: 34rpx;
}
 .selectall {
  display: block;
  color: #FFAF4C;
  padding:20rpx;
  font-size: 24rpx;
}
.selectall .ordertotal{
  float: right;
  color: #333333;
  font-weight: 600;
}
.backtohome{
  color: #ffffff;
  background: #FFAF4C;
  border-radius: 3px;
  border: 0; 
}