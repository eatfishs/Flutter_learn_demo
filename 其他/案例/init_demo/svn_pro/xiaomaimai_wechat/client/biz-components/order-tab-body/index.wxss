.order-list .order-content .title {
  color: #999999;
  font-size: 26rpx;
  padding: 10px;
  margin-top: 15px;
  background: #ffffff;
}
.order-list .order-content .title .status {
  float: right;
  color: #333333;
  font-weight: 600;
}
.order-list .order-content .title .btnPay {
  padding: 0 14px;
  left: 20vw;
  position: relative;
  display: inline-flex;
  color: #ffffff;
  background: #FFAF4C;
  border-radius: 3px;
  border: 0;
  height: 32px;
}
.order-list .order-content .title .btnPay .icon-wechat {
  padding-right: 5px;
  vertical-align: middle;
  font-weight: lighter;
}
.order-list .order-content .title .btnPay text {
  vertical-align: middle;
}
.order-list .order-content .product-info {
  width: auto;
  height: 90px;
  white-space: nowrap;
  overflow: scroll;
  padding: 10px;
}
.order-list .order-content .product-info .product-image {
  display: inline-flex;
  padding: 0 3px;
}
.order-list .order-content .product-info .product-image image {
  width: 90px;
  height: 90px;
  background: #e3e3e3;
}
.order-list .order-content .product-info .product-image image .price {
  position: relative;
  top: -17px;
  padding: 0 5px;
  color: #ffffff;
  float: right;
  display: inline-flex;
  background: rgba(0, 0, 0, 0.6);
  font-weight: bolder;
  font-size: 26rpx;
}
.order-list .order-content .product-info .product-image image .price .unit {
  font-weight: lighter;
  font-size: 24rpx;
}
.order-list .order-content .orderno {
  padding: 15px 10px;
  background: #ffffff;
  font-size: 24rpx;
  color: #999999;
}

.order-list .order-content .btndetail {
  float:right;
  background: linear-gradient(to right, #FFA739, #FFC63F);
  color: #ffffff;
  border-radius: 0;
  font-size: 24rpx;
  letter-spacing: 1px;
}
.order-list .order-content .bottom {
  padding: 15px 10px;
  background: #ffffff;
}
.order-list .order-content .bottom .total {
  font-size: 24rpx;
  color: #999999;
}
.order-list .order-content .bottom .total .total-title {
  font-size: 28rpx;
  margin-right: 5px;
}
.order-list .order-content .bottom .total .price {
  float: right;
  color: #999999;
  font-size: 30rpx;
}
