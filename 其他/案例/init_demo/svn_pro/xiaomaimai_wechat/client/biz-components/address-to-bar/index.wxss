.flex-row-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.flex-row-top-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}
.flex-row-bottom-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}
.flex-row-center-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.flex-row-center-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.flex-column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.container {
  background-color: white;
}
.address-bar-top-line {
  height: 8rpx;
  background: transparent url('data:image/png;base64,') repeat-x;
  background-size: cover;
}
.address-bar {
  display: flex;
  flex-direction: row;
  padding: 10px;
}
.address-bar .left-panel {
  display: flex;
  width: 50%;
  justify-content: left;
  align-items: center;
}
.address-bar .left-panel .user-name {
  font-size: 24rpx;
  color: #616161;
}
.address-bar .left-panel .default {
  font-size: 20rpx;
  color: #EF751D;
  display: inline-block;
  padding: 3px 8px;
  border-radius: 6rpx;
  background: #FFF0DD;
}
.address-bar .phone-number {
  font-size: 24rpx;
  color: #616161;
}
.address-bar .right-panel {
  width: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.address-bar .right-panel .icon-arrow-right {
  width: 20rpx;
  height: 20rpx;
}
.address {
  font-size: 24rpx;
  color: #666666;
  padding: 0 10px 15px 10px;
}
