<!-- xxx 页 -->
<view class="page">
    <scroll-view class="page-container" scroll-y='true' style="height:{{ clientHeight ? (clientHeight+offsetHeight)+'px':'auto'}};">
        <canvas canvas-id="canvas-shared" style="width:690px;height:1069px;visibility: hidden;position:fixed;left:-9999px;" class="canvas-shared"/>
        <image class="share-card" src="{{shareImageUrl}}" mode="widthFix"></image>
    </scroll-view>
    <view class="flex-row-center bottom-group-bar">
        <button class="btn btn-save" bindtap="bindSaveShare">保存图片分享</button>
        <button class="btn btn-share" open-type="share" bindtap="bindShareToFirend">分享给好友</button>
    </view>
</view>
