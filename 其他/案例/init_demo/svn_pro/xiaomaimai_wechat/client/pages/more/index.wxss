.more {
  width: 90vw;
  padding: 10px 15px;
}
.more .topic-title {
  width: 100%;
  text-align: center;
  padding-bottom: 10px;
}
.more .topic-list {
  width: 100%;
}
.more .topic-list .tag-item {
  display: inline-flex;
  padding: 7px 10px;
  background: #ededed;
  border-radius: 2px;
  margin: 5px 3px;
  color: #666666;
  font-size: 24rpx;
}
.more .topic-list .tag-item.active {
  background: #FFF0DD;
  color: #EF751D;
}
