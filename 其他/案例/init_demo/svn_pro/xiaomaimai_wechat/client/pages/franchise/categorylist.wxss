.myStore{
  border-top-color: #f1f1f1;
  border-top-style: solid;
  border-width: 26rpx;
}
.myVisitStores{
  border-top-color: #f1f1f1;
  border-top-style: solid;
  border-width: 26rpx;
  margin-top: 50rpx;
}
.title{
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  margin-left: 4.8vw;
  margin-top: 2.2vw;
}
.storeIcon{
  width:120rpx;
  height:120rpx;
  margin-left: 4.8vw;
  margin-top: 3.4vw;
  border-radius: 50%;
  border: 3rpx solid #FFAD4C;
}
.storeName{
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
}
.bottomButton {
  position: fixed;
  bottom: 0;
  width: 100vw;
  height: 50px;
  border-radius: 0 !important;
  background: linear-gradient(to bottom, #FFC63F, #FFA739);
  color: #ffffff;
  letter-spacing: 2px;
  border: 0 !important;
}
.button-hover {
  background: linear-gradient(to bottom, #FFA739, #FFC63F);
}
.backtohome{
  color: #ffffff;
  background: #FFAF4C;
  border-radius: 3px;
  border: 0; 
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.modalDlg{
    width: 580rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    padding-top: 50rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.shareButton {
  line-height: 50px;
  width: 100%;
  justify-content: center;
  letter-spacing: 5px;
  margin-top: 50rpx;
  border-radius: 0;
  background: linear-gradient(to bottom right, #FFC63F, #FFA739);
  color: #ffffff;
  font-size: 34rpx;
}
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: block;
  flex-direction: row;
  background-color: white;
  z-index: 999;
}
.payment {
  position: fixed;
  bottom: 0;
  display: inline-flex;
  line-height: 50px;
  width: 100%;
  justify-content: center;
  letter-spacing: 5px;
  border-radius: 0;
  background: linear-gradient(to bottom right, #FFC63F, #FFA739);
  color: #ffffff;
  font-size: 34rpx;
}