page {
  background: #F1F1F1;
}
.container {
  background-color: #F1F1F1;
}
.container form {
  width: 100%;
  background: #ffffff;
}
.row-panel {
  width: 100%;
  border-bottom: solid 1px #EBEBEB;
  font-size: 24rpx;
  line-height: 24rpx;
  padding: 20rpx 30rpx;
  display:flex;
}
.row-panel .inputtitle{
  width:30vw;
  margin-top:10rpx;
}

.row-panel .picker {
  color: #878787;
  font-size: 24rpx;
  line-height: 24rpx;
  display: inline-flex;
  width: 100%;
}
.row-panel:last-child {
  border-bottom: none;
}
.bottom-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: solid 1px #EBEBEB;
  padding: 20rpx 30rpx;
  background-color: white;
}
.bottom-panel .btn-save {
  color: white;
  font-size: 28rpx;
  border-radius: 0;
  line-height: 40px;
  background: linear-gradient(to bottom right, #FFC63F, #FFA739);
}
.bottom-panel .button-hover {
  background: linear-gradient(to top right, #FFC63F, #FFA739);
}
