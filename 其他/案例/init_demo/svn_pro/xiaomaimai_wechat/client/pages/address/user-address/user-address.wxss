/*地址管理*/
.flex-row-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.flex-row-top-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}
.flex-row-bottom-left {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}
.flex-row-center-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.flex-row-center-right {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.flex-column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
page {
  background-color: #F1F1F1;
  font-size: 10pt;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
}
.address {
  background-color: #fff;
  margin-top: 1px;
  margin-bottom: 20rpx;
}
.address-icon {
  width: 100rpx;
}
.address-detail {
  border: solid 1px;
}
.address-name-phone {
  margin-bottom: 20rpx;
  font-size: 11pt;
  font-weight: 900;
}
.address-name {
  margin-right: 20rpx;
}
.address-info {
  margin-bottom: 30rpx;
}
.address-edit {
  border-top: solid 1rpx #EBEBEB;
  text-align: right;
  padding: 20rpx 20rpx;
}
.add-address {
  text-align: center;
  padding: 0 20rpx;
  background: linear-gradient(to bottom right, #FFC63F, #FFA739);
  color: #ffffff;
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  height: 50px;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  letter-spacing: 2px;
}
.add-address-icon {
  height: 20px;
  width: 20px;
}
.btn-small {
  display: inline-block;
  font-size: 24rpx;
  color: #616161;
  margin-right: 10rpx;
}
.btn-small:last-child {
  margin-right: 0;
}
.default-address {
  float: left;
}
.default-address .icon-circle {
  margin-right: 5px;
}
.default-address .icon-correct {
  margin-right: 5px;
  color: #FFA739;
}
.btn-edit {
  margin-right: 15px;
}
.btn-edit .icon-pencil {
  color: #999999;
  margin-right: 5px;
}
.btn-remove .icon-rabbish {
  color: #999999;
  margin-right: 5px;
}
.loading-panel {
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  height: 100px;
}
.empty-placeholder {
  margin-top: 80rpx;
  margin-bottom: 60rpx;
}
