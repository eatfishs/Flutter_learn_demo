}
.shopping-cart {
  width: 100%;
  height: 60px;
  background: #ffffff;
  position:fixed;
  bottom: 50px;
  box-shadow: 0 0 20px rgba(153, 153, 153, 0.5);
  z-index: 10;
}
.shopping-cart .icon-cart {
  position: fixed;
  bottom: 50;
  color: #ff9100;
  font-size: 2.7rem;
  padding: 10px;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 40px;
  background: #ffffff;
  box-shadow: 0 -10px 20px #ededed;
}
.shopping-cart .total {
  margin-left: 80px;
  height: 60px;
}
.shopping-cart .total .account {
  color: #EE5050;
  font-size: 36rpx;
  padding: 5px 0;
}
.shopping-cart .total .message {
  color: #999999;
  font-size: 24rpx;
  padding-bottom: 5px;
}
.shopping-cart .checkout {
  display: inline-flex;
  line-height: 60px;
  float: right;
  width: 150px;
  justify-content: center;
  letter-spacing: 5px;
  border-radius: 0;
  background: linear-gradient(to bottom right, #FFC63F, #FFA739);
  color: #ffffff;
  font-size: 34rpx;
}
.cart-title {
  color: #999999 !important;
  font-size: 26rpx;
  width:100vw;
}
.cart-title .clear {
  float: right;
  display: inline-flex;
}
.cart-title .clear .icon-rabbish {
  margin-right: 5px;
  vertical-align: bottom;
}
